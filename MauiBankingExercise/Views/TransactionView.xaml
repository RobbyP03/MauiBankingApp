<?xml version="1.0" encoding="utf-8" ?>
<views:BasePage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiBankingExercise.Views.TransactionView"
             xmlns:viewmodels="clr-namespace:MauiBankingExercise.ViewModels"
             xmlns:views="clr-namespace:MauiBankingExercise.Views"
             xmlns:models="clr-namespace:MauiBankingExercise.Models"
             Title="Account Transactions" x:DataType="viewmodels:TransactionViewModel">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <!-- Account Information Header -->
            <Border BackgroundColor="LightBlue"
                    Padding="15"
                    Stroke="Gray"
                    StrokeThickness="1">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10"/>
                </Border.StrokeShape>
                <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="*,Auto">
                    <Label Text="{Binding SelectedAccount.AccountNumber, StringFormat='Account: {0}'}"
                           FontSize="18"
                           FontAttributes="Bold"
                           Grid.Row="0"
                           Grid.Column="0"/>

                    <Label Text="{Binding SelectedAccount.AccountBalance, StringFormat='Balance: R{0:N2}'}"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="Green"
                           Grid.Row="0"
                           Grid.Column="1"/>

                    <Label Text="{Binding SelectedAccount.AccountType.Name, StringFormat='Type: {0}'}"
                           FontSize="14"
                           TextColor="Gray"
                           Grid.Row="1"
                           Grid.ColumnSpan="2"/>
                </Grid>
            </Border>

            <!-- Transaction Form -->
            <Label Text="Make a Transaction"
                   FontSize="20"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>

            <!-- Enter Transaction Amount -->
            <Label Text="Transaction Amount" FontAttributes="Bold"/>
            <Entry Text="{Binding TransactionAmount}"
                   Keyboard="Numeric"
                   Placeholder="Enter amount (e.g., 100.00)"/>

            <!-- Select Transaction Type -->
            <Label Text="Transaction Type" FontAttributes="Bold"/>
            <Picker ItemsSource="{Binding TransactionTypes}"
                    SelectedItem="{Binding SelectedTransactionType}"
                    Title="Select transaction type"/>

            <!-- Add Transaction Button -->
            <Button Text="Process Transaction"
                    Command="{Binding AddTransactionCommand}"
                    BackgroundColor="Green"
                    TextColor="White"
                    Margin="0,10,0,20"/>

            <!-- Transaction History -->
            <Label Text="Transaction History"
                   FontSize="18"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   Margin="0,20,0,10"/>

            <CollectionView ItemsSource="{Binding Transactions}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Transaction">
                        <Border Margin="5"
                                Padding="10"
                                Stroke="LightGray"
                                StrokeThickness="1">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="5"/>
                            </Border.StrokeShape>
                            <Grid Padding="5" ColumnSpacing="10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="100"/>
                                </Grid.ColumnDefinitions>

                                <Label Grid.Column="0"
                                       Text="{Binding TransactionDate, StringFormat='{0:MMM dd, yyyy}'}"
                                       FontSize="12"/>

                                <Label Grid.Column="1"
                                       Text="{Binding Description}"
                                       FontSize="14"
                                       FontAttributes="Bold"/>

                                <Label Grid.Column="2"
                                       Text="{Binding Amount, StringFormat='R{0:N2}'}"
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       HorizontalTextAlignment="End"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
                <CollectionView.EmptyView>
                    <Label Text="No transactions found for this account"
                           HorizontalOptions="Center"
                           TextColor="Gray"
                           FontAttributes="Italic"/>
                </CollectionView.EmptyView>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
</views:BasePage>